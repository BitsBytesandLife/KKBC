@model IEnumerable<Category>;

<h2 class="header-color">Product Categories</h2>

<div style="display: block">
    <a class="kkbc-a" style="color: white;" href="/Products/InsertCategory/">Create a New Category</a>
</div>
<table class="table table-striped  table-light border">
    <tr>
        <th>ID</th>
        <th>Name</th>
    </tr>
    @foreach (var category in Model)
    {
    <tr>
        <td><a href=/Products/ViewCategory/@category.CatID>@category.CatID</a></td>
        <td>@category.Name</td>
    </tr>
    }
</table>
