@model Products

<h2>Update @Model.Name</h2>

@using (Html.BeginForm("UpdateProductToDatabase", "Products", "Post"))
{
    <input asp-for="ProdID" type="hidden" value="@Model.ProdID" />

    <label asp-for="Name" class="control-label">Name</label>

    <input type="text" name="Name" class="form-control" value="@Model.Name" />

    <label asp-for="StockLevel" class="control-label">StockLevel</label>

    <input type="text" name="StockLevel" class="form-control" value="@Model.StockLevel" />

    <label asp-for="Price" class="control-label">Price</label>

    <input type="number" step="0.01" name="Price" class="form-control" value="@Model.Price" />

    <input type="submit" value="Update Product" class="btn btn-primary" />

}

