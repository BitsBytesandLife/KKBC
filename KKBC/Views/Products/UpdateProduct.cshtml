@model Products

<h2 class="header-color">Update @Model.Name</h2>

@using (Html.BeginForm("UpdateProductToDatabase", "Products", "Post"))
{
    <input asp-for="ProdID" type="hidden" value="@Model.ProdID" />

    <label asp-for="Name" class="control-label" style="color:white;">Name</label>

    <input type="text" name="Name" class="form-control" value="@Model.Name" />

    <br />
    <label asp-for="StockLevel" class="control-label" style="color:white;">StockLevel</label>

    <input type="text" name="StockLevel" class="form-control" value="@Model.StockLevel" />
    <br />
    <label asp-for="Price" class="control-label" style="color:white;">Price</label>

    <input type="number" step="0.01" name="Price" class="form-control" value="@Model.Price" />
    <br />
    <input type="submit" value="Update Product" class="btn btn-primary btn-info" />

}

