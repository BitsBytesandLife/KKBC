@model ScentName

<h2 class="header-color">Scent Profile</h2>

<table class="table table-striped table-light border">
    <tr>
        <th>Scent ID</th>
        <th>Name</th>
        <th>Description</th>
    </tr>
    <tr>
        <td>@Model.ScentID</td>
        <td>@Model.Name</td>
        <td>@Model.Description</td>
    </tr>
</table>
<br />
<div style="display: block">
    <a class="kkbc-a" style="color: white;" href="/Products/UpdateScent/@Model.ScentID">Update this Scent</a>
</div>
<br />
<div style="display: block">
    @using (Html.BeginForm("DeleteScent", "Products", "Post"))
    {
        <input type="hidden" asp-for="ScentID" value="@Model.ScentID" />
        <input class="btn-danger" type="submit" onclick="return confirm('Are you sure?')" value="Delete this Scent" />
    }
</div>