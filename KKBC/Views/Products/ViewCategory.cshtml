@model Category

<h2>Category</h2>

<table class="table">
    <tr>
        <th>Category</th>
        <th>Name</th>
    </tr>
    
   <tr>
      <td>@Model.CatID</td>
      <td>@Model.Name</td>
   </tr>
</table>

<div style="display: block">
    <a href="/Products/UpdateCategory/@Model.CatID">Update this Category</a>
</div>

<div style="display: block">
    @using (Html.BeginForm("DeleteCategory", "Products", "Post"))
    {
        <input type="hidden" asp-for="CatID" value="@Model.CatID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this Scent" />
    }
</div>