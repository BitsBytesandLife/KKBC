@model Category

<h2 class="header-color">Category</h2>

<table class="table table-striped table-light border ">
    <tr>
        <th>Category</th>
        <th>Name</th>
    </tr>
    
   <tr>
      <td>@Model.CatID</td>
      <td>@Model.Name</td>
   </tr>
</table>
<br />
<div style="display: block">
    <a class="kkbc-a" style="color: white;" href="/Products/UpdateCategory/@Model.CatID">Update this Category</a>
</div>
<br />
<div style="display: block">
    @using (Html.BeginForm("DeleteCategory", "Products", "Post"))
    {
        <input type="hidden" asp-for="CatID" value="@Model.CatID" />
        <input class="btn-danger" type="submit" onclick="return confirm('Are you sure?')" value="Delete this Scent" />
    }
</div>