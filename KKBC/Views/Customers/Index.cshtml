@model IEnumerable<Customers>;

<h2 class="header-color">Customers</h2>

<div style="display: block">
    <a class="kkbc-a" style="color: white;" href="/Customers/InsertCustomer/">Create a New Customer</a>
</div>

<table class="table table-striped  table-light border">
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zipcode</th>
    </tr>

    @foreach (var customer in Model)
    {
        <tr>
            <td><a href=/Customers/ViewCustomer/@customer.CustID>@customer.CustID</a></td>
            <td>@customer.FirstName </td>
            <td>@customer.LastName</td>
            <td>@customer.Address</td>
            <td>@customer.City</td>
            <td>@customer.State</td>
            <td>@customer.ZipCode</td>
        </tr>
    }
</table>
