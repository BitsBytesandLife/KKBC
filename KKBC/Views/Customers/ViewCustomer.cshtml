@model Customers

<h3>Customer Information</h3>

<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zipcode</th>
    </tr>
    <tr>
        <td>@Model.FirstName </td>
        <td>@Model.LastName</td>
        <td>@Model.Address</td>
        <td>@Model.City</td>
        <td>@Model.State</td>
        <td>@Model.ZipCode</td>
    </tr>
</table>

<div style="display: block">
    <a href="/Customers/UpdateCustomer/@Model.CustID">Update this Customer</a>
</div>

<div style="display: block">
    @using (Html.BeginForm("DeleteCustomer", "Customers", "Post"))
    {
        <input type="hidden" asp-for="CustID" value="@Model.CustID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this product" />
    }
</div>
